#FUNCTIONS
function pubip {
curl ifconfig.io
}

function pfind {
#Finds and prints full path to file w/o having to call find
A="${1,,}"
if [ -z "$A" ] || [ "$A" == "-h" ]  || [  "$A" == "--help" ] || [ "$A" == '/?' ]
then 
	echo "USAGE: pfind [-h|here|file|folder]"
fi

if [ "$A" == "here" ]
then
	find $PWD -maxdepth 1 2>/dev/null
else
	find $PWD -iname $1 2>/dev/null
fi
}

###WSL SPECIFIC.
#If you aren't using WSL, comment out.
#ALIASES
alias ex='explorer.exe'

#FUNCTIONS
function wps {
#Use sysinternals ps to get an actual windows process list. 
WPS="/mnt/e/Computer/Utilities_System/Sysinternals/pslist.exe"
$WPS -t $*
}

function wnetstat {
#Use netstat to see net connections
netstat.exe -ano
}

