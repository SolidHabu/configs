alias gkill='kill -9 -'
alias estat='wnetstat | egrep "EST" | egrep -v "\*:\*|127.0.0.1|0.0.0.0|\[::\]:0|Address" | sort | uniq -u'
alias lstat='wnetstat | egrep "LIST" | egrep -v "\*:\*|127.0.0.1|\[::\]:0|Address" | sort | uniq -u'

